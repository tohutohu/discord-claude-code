#!/bin/sh

# pre-commit hook for Deno project
# Runs format, lint, type check, and tests before allowing commit

echo "ðŸ” Running pre-commit checks..."

# Run format (auto-fix mode)
echo "ðŸ“ Running formatter..."
deno fmt
# Check if any files were modified by formatter
if [ -n "$(git diff --name-only)" ]; then
    echo "ðŸ”§ Files were auto-formatted. Adding formatted files to commit..."
    git add -u
fi

# Run linter
echo "ðŸ§¹ Running linter..."
if ! deno lint; then
    echo "âŒ Lint check failed! Fix the linting errors before committing."
    exit 1
fi

# Run type check
echo "ðŸ”Ž Running type check..."
if ! deno check src/main.ts; then
    echo "âŒ Type check failed! Fix the type errors before committing."
    exit 1
fi

# Run tests
echo "ðŸ§ª Running tests..."
if ! deno test --allow-read --allow-write --allow-env --allow-run; then
    echo "âŒ Tests failed! Fix the failing tests before committing."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"

# Record successful check timestamp for commit-msg hook
mkdir -p .git
date +%s > .git/.last-precommit-check