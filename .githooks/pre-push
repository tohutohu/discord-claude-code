#!/bin/sh

# pre-push hook to ensure no bypassed commits are pushed
# This hook runs the same checks as pre-commit before allowing push

echo "ğŸ” Running pre-push checks..."

# Run format check
echo "ğŸ“ Checking format..."
if ! deno task fmt:quiet --check; then
    echo "âŒ Format check failed! Run 'deno fmt' to fix formatting issues."
    exit 1
fi

# Run linter
echo "ğŸ§¹ Running linter..."
if ! deno task lint:quiet; then
    echo "âŒ Lint check failed! Fix the linting errors before pushing."
    exit 1
fi

# Run type check
echo "ğŸ” Running type check..."
if ! deno task check:quiet; then
    echo "âŒ Type check failed! Fix the type errors before pushing."
    exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
if ! deno task test:quiet; then
    echo "âŒ Tests failed! Fix the failing tests before pushing."
    exit 1
fi

echo "âœ… All pre-push checks passed!"