#!/bin/sh

# pre-push hook to ensure no bypassed commits are pushed
# This hook runs the same checks as pre-commit before allowing push

echo "🔍 Running pre-push checks..."

# Run format check
echo "📝 Checking format..."
if ! deno fmt --check; then
    echo "❌ Format check failed! Run 'deno fmt' to fix formatting issues."
    exit 1
fi

# Run linter
echo "🧹 Running linter..."
if ! deno lint; then
    echo "❌ Lint check failed! Fix the linting errors before pushing."
    exit 1
fi

# Run type check
echo "🔎 Running type check..."
if ! deno check src/main.ts; then
    echo "❌ Type check failed! Fix the type errors before pushing."
    exit 1
fi

# Run tests
echo "🧪 Running tests..."
if ! deno test --allow-read --allow-write --allow-env --allow-net --allow-run; then
    echo "❌ Tests failed! Fix the failing tests before pushing."
    exit 1
fi

echo "✅ All pre-push checks passed!"